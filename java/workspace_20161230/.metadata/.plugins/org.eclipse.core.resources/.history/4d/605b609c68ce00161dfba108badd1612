package for문예제;

public class TestMain {
	public static void main(String[] args) {
		int i;
		
		System.out.println("1~10까지 출력");
		System.out.println();
		for(i=1; i<=10; i++){
			System.out.print(i);
		}
		
		System.out.println("1~10까지 짝수만 출력");
		System.out.println();
		for(i=2; i<=10; i=i+2){  //i+=2
			System.out.print(i);
		}
		
		System.out.println("1~10까지 홀수만 출력");
		System.out.println();
		for(i=1; i<=10; i=i+2){  //i+=2
			System.out.print(i);
		}
		
	}
}
