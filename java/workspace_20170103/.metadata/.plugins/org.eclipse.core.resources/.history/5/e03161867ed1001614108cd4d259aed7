package 로또프로그램;

import java.util.Random;

public class TestMain {
	public static void main(String[] args) {
		// 상수 = 변수처럼 보이지만 값변환 못하게
		final int MAX = 6;
		int []lotto;
		int i;
		boolean duplicate; // 중복이냐?
		int count;
		Random rand = new Random();
		
		lotto = new int[MAX];
		count = 0;
		while(count < MAX){   // 데이터 여섯개 다 뽑을때까지
			
			int temp = rand.nextInt(10)+1;
			// 임시값 하나 생성, 이 값이 이미 lotto
			// 배열에 존재하는지 확인한다.
			duplicate = false;  // 존재 안한다고 생각
			for(i=0; i<count; i++){
				if(lotto[i] == temp){
					// 존재함
					duplicate = true;
					break;
				}
			} // 존재하면 사용 못함, 계속 반복해야함
			if(duplicate == false){
				lotto[count] = temp;
				count++;
			}
		}
		
		System.out.println("Lotto Number : ");
		for(i=0; i<MAX; i++){
			System.out.println();
		}
	}
}
