package 변수;

public class TestMain {

	public static void main(String[] args) {
		
		int a;
		/* 
		     변수 - 값이 변한다 해서 변수이다.
		             컴퓨터의 메모리에 이름을 붙여놓고 
		             그 이름으로 메모리에 접근하기 위해 사용한다.
		   int - 10진수를 저장하기 위해 4바이트의 메모리를 확보하라는 얘기
		   		 ff ff ff ff ~ 0
		 */
		a = 10;  // 변수에 값 넣기(대입 또는 할당)
		
		System.out.println(a);
	}

}
